<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:background="#DADADC"
    android:id="@+id/container">

    <include
        android:id="@+id/toolbar_detailpolling"
        layout="@layout/toolbar_detailpolling"
        ></include>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_below="@+id/toolbar_detailpolling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingRight="10dp">

            <TextView

                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="Kelas :"
                android:textSize="20sp"/>
            <TextView
                android:textColor="@color/black"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:hint="kelas"
                android:id="@+id/pol_namamatkul"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingRight="10dp">

            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="27sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nama_threadpol"
                android:layout_gravity="right" />
        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingRight="10dp">

            <TextView
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="7dp"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:id="@+id/deskripsi_pol" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="Jadwal Pilihanku"
                android:textSize="23sp"
                android:id="@+id/textViewJadwalPil"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewJadwalPil"
                android:paddingLeft="15dp"
                android:id="@+id/textViewPilihan"
                android:textSize="20sp"
                android:layout_weight="1">
            </TextView>
        </RelativeLayout>

        <ListView
            android:background="@color/whitedrawer"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/reply_pol"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:paddingLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textColor="@color/list_divider"
            android:hint="Berikan komentar disini"
            android:textSize="18sp"
            android:id="@+id/text_replyPol"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/buttonSendReq"
            android:layout_alignParentEnd="true"
            android:background="@color/ColorPrimary"
            android:backgroundTint="@color/ColorPrimary"
            android:src="@drawable/ic_send_white"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:onClick="ReplyPol"
            android:text="Kirim Pertanyaan"
            android:textColor="@color/white"
            android:gravity="center_horizontal|top"
            android:minWidth="40dp"
            android:minHeight="35dp"/>
    </RelativeLayout>
</RelativeLayout>
