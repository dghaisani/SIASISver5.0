<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar_profileother"
        layout="@layout/toolbar_profileother"
        ></include>

    <LinearLayout
        android:layout_below="@+id/toolbar_profileother"
        android:id="@+id/data_mahasiswa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@color/whitedrawer">

        <LinearLayout
            android:id="@+id/frame_foto"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:weightSum="1"
            android:background="@drawable/a">

            <ImageButton
                android:id="@+id/foto_profil"
                android:layout_width="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_height="120dp"
                android:layout_marginBottom="15dp"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/nama_mahasiswa1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Nama"
                    android:singleLine="true"
                    android:visibility="invisible"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/npm_mahasiswa1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:hint="NPM"
                    android:visibility="invisible"
                    android:layout_below="@+id/nama_mahasiswa"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:id="@+id/nohp_mahasiswa1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:hint="No.HP"
                    android:visibility="invisible"
                    android:layout_below="@+id/npm_mahasiswa"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:id="@+id/email_mahasiswa1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:hint="Email"
                    android:visibility="invisible"
                    android:layout_below="@+id/nohp_mahasiswa"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/nama_mahasiswa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="32sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/npm_mahasiswa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_below="@+id/nama_mahasiswa"
                    android:textColor="@color/list_divider"
                    />
                <TextView
                    android:id="@+id/nohp_mahasiswa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_below="@+id/npm_mahasiswa"
                    android:textColor="@color/list_divider"
                    />
                <TextView
                    android:id="@+id/email_mahasiswa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_below="@+id/nohp_mahasiswa"
                    android:textColor="@color/list_divider"
                    />
            </RelativeLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:background="@color/ColorPrimary">
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Role"
                android:textSize="24sp"
                android:layout_marginRight="260dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/role"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

